<!-- templates/index.html -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forward List</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 20px;
            background-color: #f8f9fa;
        }
    
        h1 {
            color: #343a40;
        }
    
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
    
        th, td {
            border: 1px solid #dee2e6;
            padding: 12px;
            text-align: left;
        }
    
        th {
            background-color: #2181b5;
            color: #fff;
        }
    
        .green {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 8px 12px;
            cursor: pointer;
            text-decoration-line: none;
        }
    
        form {
            margin-top: 20px;
        }
    
        input, select, button {
            margin-bottom: 10px;
        }
    
        input, select {
            padding: 12px;
            width: calc(100% - 24px);
            box-sizing: border-box;
        }
    
        select {
            background-color: #fff;
            border: 1px solid #ced4da;
            border-radius: 4px;
            color: #495057;
        }
        label {
            display: block;
            margin-bottom: 5px;
            color: #495057;
        }
        .send{
            border: none;
            color: white;
            background-color: #2181b5;
        }

    </style>    
</head>
<body>
    <h1>Forward List</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Local Port</th>
                <th>Remote Addr</th>
                <th>Remote Port</th>
                <th>Protocol</th>
                <th>Total Bytes</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{range .forwardList}}
                <tr>
                    <td>{{.Id}}</td>
                    <td>{{.LocalPort}}</td>
                    <td>{{.RemoteAddr}}</td>
                    <td>{{.RemotePort}}</td>
                    <td>{{.Protocol}}</td>
                    <td>{{.TotalBytes}}</td>
                    <td><a class="green" href="/del/{{.LocalPort}}">Delete</button></td>
                </tr>
            {{end}}
        </tbody>
    </table>

    <h2>Add Forward</h2>
    <form action="/add"  method="post" id="addForm">
        <input type="text" name="localPort" placeholder="Local Port" required>
        <input type="text" name="remotePort" placeholder="Remote Port" required>
        <input type="text" name="remoteAddr" placeholder="Remote Addr" required>
        <label for="protocol">Protocol:</label>
        <select id="protocol" name="protocol" required>
            <option value="tcp">TCP</option>
            <option value="udp">UDP</option>
        </select>
        <input class="send" type="submit" value="Add"/>
    </form>
</body>
</html>
